	requestQueryParameters := url.Values{}{{/if}}
{{~#each queryParams}}
{{~#eq paramName "list"}}
	requestQueryParameters.Add("{{baseName}}", "true")
{{~else}}
	requestQueryParameters.Add("{{baseName}}", parameterToString({{paramName}}))
{{~/eq}}
{{~/each}}

{{#each bodyParams}}
{{#if isListContainer}}
	res, err := sendStructuredRequestParseResponseList[{{.}}](
{{else}}
	res, err := sendStructuredRequestParseResponse[{{returnType}}{{#unless returnType}}any{{/unless}}](
{{/if}}
		ctx,
		{{lower (substring classname 0 1)}}.client,
		http.Method{{httpMethod}},
		requestPath,
	 	request,
{{#if queryParams.length}}
		requestQueryParameters,
{{else}}
		nil,
{{/if}}
		nil,
	)
{{/each}}
	return res, err
}

